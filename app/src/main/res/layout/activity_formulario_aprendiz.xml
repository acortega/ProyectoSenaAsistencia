<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#149B95"
    android:orientation="vertical"
    tools:context="com.asistencia.sena.aprendiz.aprendizasiste.FormularioAprendiz">

    <TextView
        android:text="Bienvenido Aprendiz\n Digite su informaciÃ³n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top_parent"
        android:text="@string/ficha"/>

    <Spinner
        android:id="@+id/spFichas"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top_parent"
        android:text="@string/tipo_identificacion"/>

    <Spinner
        android:id="@+id/spTipoId"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top"
        android:entries="@array/opt_tipo_id"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginTop="@dimen/margin_top_parent"
        android:text="@string/identificacion"/>

    <EditText
        android:id="@+id/etId"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_height="wrap_content"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_top"
        android:layout_marginTop="@dimen/margin_top_parent"
        android:layout_gravity="right|bottom"
        android:onClick="crearQr"
        android:text="Crear QR"/>

    <ProgressBar
        android:id="@+id/progressForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="invisible"
        android:indeterminateOnly="true"
        android:layout_gravity="bottom|right"/>

</LinearLayout>


